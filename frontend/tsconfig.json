{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/components/*"],
      "@data/*": ["app/data/*"],
      "@navigation/*": ["app/navigation/*"],
      "@screens/*": ["app/screens/*"],
      "@theme/*": ["app/theme/*"],
      "@types/*": ["app/types/*"],
      "@services/*": ["app/services/*"]
    },
    "esModuleInterop": true
  }
}
